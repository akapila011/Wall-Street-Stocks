<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/tickerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:ems="12"
        android:hint="Enter ticker symbol e.g. AAPL"
        android:inputType="textCapCharacters"
        android:maxLength="5"
        android:paddingBottom="4dp"
        android:paddingTop="6dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search" />

    <TextView
        android:id="@+id/blankEditText"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/holo_green_light"
        android:text="" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Time (EST) : "
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tickerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ticker : "
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/openPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Open : "
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/closePriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Close/Current : "
                android:textColor="?android:attr/colorActivatedHighlight"
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyHighTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Daily High : "
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyLowTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Daily Low : "
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/volumeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Volume : "
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>